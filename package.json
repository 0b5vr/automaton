{
  "name": "@fms-cat/automaton",
  "version": "2.1.0",
  "description": "Animation engine for creative coding",
  "main": "dist/automaton.js",
  "repository": "https://github.com/FMS-Cat/automaton",
  "author": "FMS-Cat",
  "types": "types/index.d.ts",
  "license": "MIT",
  "scripts": {
    "dev": "webpack-dev-server --hot --mode development",
    "all": "yarn lint && yarn clean && yarn build && yarn types && yarn docs",
    "preversion": "git-branch-is master",
    "version": "yarn all",
    "postpublish": "yarn gh-pages",
    "clean": "rimraf dist docs types",
    "build": "yarn build-dev && yarn build-prod",
    "build-dev": "webpack --mode development",
    "build-prod": "webpack --mode production",
    "types": "tsc --emitDeclarationOnly",
    "docs": "typedoc --out docs --mode file --excludeNotExported",
    "lint": "eslint \"src/**/*.ts\"",
    "test": "jest",
    "gh-pages": "node ./utils/gh-pages.js"
  },
  "files": [
    "dist",
    "types",
    "LICENSE",
    "package.json",
    "README.md"
  ],
  "devDependencies": {
    "@types/jest": "^25.1.4",
    "@typescript-eslint/eslint-plugin": "^2.3.2",
    "@typescript-eslint/parser": "^2.3.2",
    "eslint": "^6.5.1",
    "fork-ts-checker-webpack-plugin": "^1.5.0",
    "gh-pages": "^2.1.1",
    "git-branch-is": "^3.0.0",
    "jest": "^25.1.0",
    "rimraf": "^3.0.0",
    "ts-jest": "^25.2.1",
    "ts-loader": "^6.2.0",
    "typedoc": "^0.15.0",
    "typescript": "^3.7.4",
    "webpack": "^4.41.0",
    "webpack-cli": "^3.3.9",
    "webpack-dev-server": "^3.8.2"
  },
  "dependencies": {}
}
