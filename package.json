{
  "name": "@fms-cat/automaton",
  "version": "3.0.0-beta5",
  "description": "Animation engine for creative coding",
  "repository": "https://github.com/FMS-Cat/automaton",
  "author": "FMS-Cat",
  "main": "dist/automaton.js",
  "module": "dist/automaton.module.js",
  "types": "types/index.d.ts",
  "typesVersions": {
    "<3.8": {
      "*": [
        "ts3.4/*"
      ]
    }
  },
  "license": "MIT",
  "scripts": {
    "dev": "cross-env DEV=1 ESM=1 SERVE=1 rollup -w -c -o dist/glcat.module.js",
    "all": "yarn lint && yarn test && yarn clean && yarn build && yarn docs",
    "clean": "rimraf dist/ docs/ ts*/ types/",
    "test": "jest",
    "lint": "eslint \"src/**/*.{ts,tsx}\"",
    "build": "yarn build-dev && yarn build-prod && yarn build-esm && yarn build-esmprod && yarn build-types",
    "build-dev": "cross-env DEV=1 rollup -c -o dist/glcat.js",
    "build-prod": "rollup -c -o dist/glcat.min.js",
    "build-esm": "cross-env DEV=1 ESM=1 rollup -c -o dist/glcat.module.js",
    "build-esmprod": "cross-env ESM=1 rollup -c -o dist/glcat.module.min.js",
    "build-types": "tsc --declaration --declarationDir ./types --emitDeclarationOnly && downlevel-dts types ts3.4/types",
    "docs": "typedoc --out docs --mode file --excludeNotExported"
  },
  "files": [
    "/dist/",
    "/ts*/",
    "/types/",
    "/LICENSE",
    "/package.json",
    "/README.md"
  ],
  "devDependencies": {
    "@rollup/plugin-typescript": "^5.0.2",
    "@types/jest": "^25.1.4",
    "@typescript-eslint/eslint-plugin": "^2.23.0",
    "@typescript-eslint/parser": "^2.23.0",
    "cross-env": "^7.0.2",
    "downlevel-dts": "^0.4.0",
    "eslint": "^6.8.0",
    "eslint-plugin-jest": "^23.8.2",
    "gh-pages": "^2.2.0",
    "jest": "^25.1.0",
    "rimraf": "^3.0.2",
    "rollup": "^2.26.8",
    "rollup-plugin-banner": "^0.2.1",
    "rollup-plugin-serve": "^1.0.4",
    "rollup-plugin-terser": "^7.0.1",
    "ts-jest": "^25.2.1",
    "ts-node": "^9.0.0",
    "tslib": "^2.0.1",
    "typedoc": "^0.17.6",
    "typescript": "^3.8.3"
  }
}
