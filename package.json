{
  "name": "@fms-cat/automaton",
  "version": "2.1.0",
  "description": "Animation engine with Timeline GUI for creative coding",
  "main": "dist/automaton.js",
  "author": "FMS-Cat",
  "license": "MIT",
  "scripts": {
    "dev": "cross-env AUTOMATON_BUILD=dev webpack-dev-server --hot --mode development",
    "all": "clean && yarn build && yarn types && yarn docs",
    "version": "yarn all",
    "postpublish": "yarn gh-pages",
    "clean": "rimraf dist docs types",
    "build": "yarn build-dev && yarn build-min && yarn build-nogui",
    "build-dev": "cross-env AUTOMATON_BUILD=dev webpack --mode development",
    "build-min": "cross-env AUTOMATON_BUILD=min webpack --mode production",
    "build-nogui": "cross-env AUTOMATON_BUILD=nogui webpack --mode production",
    "types": "tsc --emitDeclarationOnly",
    "docs": "typedoc",
    "gh-pages": "node ./utils/gh-pages.js"
  },
  "files": [
    "dist",
    "src",
    "types",
    "LICENSE",
    "package.json",
    "README.md"
  ],
  "devDependencies": {
    "@babel/core": "^7.3.4",
    "@babel/preset-env": "^7.3.4",
    "@types/fibers": "^0.0.30",
    "@types/sass": "^1.16.0",
    "@types/webpack": "^4.4.25",
    "@types/webpack-dev-server": "^3.1.4",
    "@typescript-eslint/eslint-plugin": "^1.4.2",
    "@typescript-eslint/parser": "^1.4.2",
    "babel-loader": "^8.0.5",
    "cross-env": "^5.2.0",
    "css-loader": "^2.1.1",
    "eslint": "^5.15.1",
    "eventemitter3": "^3.1.0",
    "fibers": "^3.1.1",
    "fork-ts-checker-webpack-plugin": "^1.0.0",
    "gh-pages": "^2.0.1",
    "rimraf": "^2.6.3",
    "sass": "^1.17.2",
    "sass-loader": "^7.1.0",
    "ts-loader": "^5.3.3",
    "ts-node": "^8.0.3",
    "typedoc": "^0.14.2",
    "typescript": "^3.3.3333",
    "url-loader": "^1.1.2",
    "vue": "^2.6.8",
    "vue-loader": "^15.7.0",
    "vue-style-loader": "^4.1.2",
    "vue-template-compiler": "^2.6.8",
    "webpack": "^4.29.6",
    "webpack-cli": "^3.2.3",
    "webpack-dev-server": "^3.2.1"
  },
  "dependencies": {}
}
